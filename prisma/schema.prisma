generator client {
  provider        = "prisma-client-js"
  //previewFeatures = ["multiSchema"]
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_URL")
  relationMode = "prisma"
  //schemas      = ["auth", "public"]
}



model Task {
  id          Int      @id
  title       String
  description String
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt  
  userId      String
  @@index([userId]) // Index for faster lookup based on userId
}
// idea is you asign userId from supabase auth to the value in the db and call supabase id to pass to create/read/update/delete